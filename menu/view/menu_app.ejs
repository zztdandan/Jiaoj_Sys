<script>
    //显示警告
    function ShowWarning() {
        $.ajax({
            type: "get",
            url: '/user_warning_info',


            success: function (data) {
                if (data != null) {
                    data.forEach(function (a) {
                        k.warninglist.push(a);
                    });
                }
            },
            error: function (data) {
                alert("操作出现错误" + data);
            }
        });
    }
    function ReadUserMenu() {
        $.ajax({
            type: "get",
            url: '/user_menu',
            success: function (data) {
                if (data != null) {
                    data.forEach(function (index_alone) {
                        k.caseindex.push(index_alone);
                    });
                }
            },
            error: function (data) {
                alert("操作出现错误" + data);
            }
        });
    }
</script>
